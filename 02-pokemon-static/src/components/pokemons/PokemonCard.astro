---


interface Props{
    name:string
    url:string
    isBig?:boolean

}

const {name,url,isBig} = Astro.props

const id = url!.split("/").at(-2);

---

<a href={`/pokemons/${name}`} class:list={[`rounded flex flex-col justify-center items-center p-2`, {border: !isBig }]}>
    <img
    transition:name=`${name}-image`
    class:list={[
        {
            'w-26 h-26': isBig,
            'w-22 h-22': !isBig
        }]}
    src={`https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/${id}.png`} alt={`pokemon-${name}`}

    />
    <span class:list={[
        
            'capitalize'
            ,{
                'text-4xl text-blue-300': isBig,
            }
        ]}

    >#{id}{name}</span>

</a>



